package sherwinw;

public class ThreeNumbersTest {

	public static void main(String [] args) {
		
		EasyReader file1 = new EasyReader();
		System.out.println("First set of inputs: ");
		double a = file1.readDouble();
		double b = file1.readDouble();
		double c = file1.readDouble();
		
		ThreeNumbers Triple1 = new ThreeNumbers(a,b,c);
		
		System.out.println("Sorted inputs: " + Triple1.getSmallest() + 
							Triple1.getMiddle() + Triple1.getLargest());
		
		EasyReader file2 = new EasyReader();
		System.out.println("Second set of inputs: ");
		double d = file2.readDouble();
		double e = file2.readDouble();
		double f = file2.readDouble();
		
		ThreeNumbers Triple2 = new ThreeNumbers(d,e,f);
		
		System.out.println("Sorted inputs: " + Triple2.getSmallest() + 
				Triple2.getMiddle() + Triple2.getLargest());
		
		EasyReader file3 = new EasyReader();
		System.out.println("Third set of inputs: ");
		double g = file3.readDouble();
		double h = file3.readDouble();
		double i = file3.readDouble();
		
		ThreeNumbers Triple3 = new ThreeNumbers(g,h,i);
		
		System.out.println("Sorted inputs: " + Triple3.getSmallest() + 
				Triple3.getMiddle() + Triple3.getLargest());
		
		
		
	}
}
